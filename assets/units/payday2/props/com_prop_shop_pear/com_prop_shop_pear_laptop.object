<dynamic_object>
    <diesel orientation_object="rp_laptop" materials="units/payday2/props/com_prop_shop_pear/com_prop_shop_pear_laptop" />
    <sequence_manager file="units/payday2/props/com_prop_shop_pear/com_prop_shop_pear_laptop" />
    <bodies>
        <body enabled="true" template="static" collides_with_mover="false" name="static_body" >
			<object name="rp_laptop" />
			<object name="c_box_1" collision_type="box" padding="-2.5"/>
        </body>
        <body enabled="true" template="static" collides_with_mover="false" name="static_monitor" >
			<object name="rp_laptop" />
			<object name="c_convex_screen" collision_type="convex" padding="-2.5"/>
        </body>

        <body enabled="false" template="debris" name="dynamic_body" >
			<object name="jt_root"/>
			<object name="c_box_1" collision_type="box" padding="-2.5"/>
			<object name="g_base"/>
        </body>
        <body enabled="false" template="debris" name="dynamic_screen" >
			<object name="jt_pivot"/>
			<object name="c_convex_screen" collision_type="convex" padding="-2.5"/>
			<object name="g_glass_dmg" />
			<object name="g_monitor" />
        </body>
    </bodies>
	<decal_surfaces>
		<decal_mesh name="dm_glass_breakable" enabled="true" material="glass_breakable"/>
		<decal_mesh name="dm_plastic_base" enabled="true" material="plastic"/>
		<decal_mesh name="dm_plastic_monitor" enabled="true" material="plastic"/>
	</decal_surfaces>
	<constraints>
		<constraint name="screen" enabled="true" type="limited_hinge">
			<param body_a="dynamic_body" body_b="dynamic_screen"/>
			<param pivot="position:jt_pivot"/>
			<param min_angle="-45" max_angle="95" axis="xaxis:jt_pivot" twist_freedom="15"/>
			<param plane_axis="yaxis:jt_pivot"/>
			<param damping="8" spring_constant="1000" min_restitution="0"/>
		</constraint>		
	</constraints>
		
    <graphics>
		<object name="g_base" 		enabled="true"/>
		<object name="g_glass_on"	enabled="true"/>
		<object name="g_monitor" 	enabled="true"/> s		
		<object name="g_glass_dmg" 	enabled="false"/>
		<object name="g_glass_off" 	enabled="false"/>
    </graphics>
</dynamic_object>
